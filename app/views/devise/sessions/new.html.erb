<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title"><strong>Sign In </strong></h3></div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label for="email">Email</label>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your email"  %>
        </div>
        <div class="form-group">
          <label for="password">Password </label>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Your password" %>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>
        <%= f.submit "Sign in", class: 'btn btn-default' %>
    <% end %>
    <hr>
    <p>Don't have an account? <%= link_to "Sign up!", new_registration_path(resource_name) %></p>
  </div>
</div>

